@model ViewModel


<form method="post" asp-action="AddLeave" asp-controller="Employee">
    <div style="width:400px;background-color:cadetblue;padding:40px">


        <div style="display:flex;justify-content:space-between" class="form-group">
            <label asp-for="@Model.leave.Reason">Reason :</label>
            <input asp-for="@Model.leave.Reason" class="form-control" />
        </div>

        <div style="display:flex;justify-content:space-between" class="form-group">
            <label asp-for="@Model.leave.FromDate">Start Date:</label>
            <input asp-for="@Model.leave.FromDate" class="form-control" />
        </div>

        <div style="display:flex;justify-content:space-between" class="form-group">
            <label asp-for="@Model.leave.ToDate">End Date:</label>
            <input asp-for="@Model.leave.ToDate" class="form-control" />
        </div>



        <div style="display:flex;justify-content:space-between" class="form-group">
            <label asp-for="@Model.leave.EmployeeName">Employee Name:</label>
            <select asp-for="@Model.leave.EmployeeName" class="form-control">
                @foreach (var item in Model.employees)
                {
                    <option>@item.EmployeeName</option>
                }
            </select>
        </div>


        <div class="form-group">
            <input type="submit" value="Apply" class="form-control"/>
        </div>

    </div>

</form>